{% extends 'main.html.twig' %}

{% block title %}{{ club.name }}{% endblock %}

{% block main_content %}
    <table class="table">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <td>{{ club.name }}</td>
            </tr>
            <tr>
                <th>Herb</th>
                <td>
                    {% if club.emblem %}
                        <img src="upload/{{club.emblem.filePath}}" class="img-fluid img-thumbnail" alt="Błąd ładowania zdjęcia" width="{{club.emblem.width}}" height="{{club.emblem.height}}" style="max-width: 200px; max-height: 200px;">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    {% if is_granted(constant('\\App\\Security\\Voter\\ClubVoter::LIST')) %}
        <a href="{{ path('clubs_front') }}" class="btn btn-outline-secondary icon-cancel" title="Wróć do listy">Wróć do listy</a>
    {% endif %}

    {% if is_granted(constant('\\App\\Security\\Voter\\ClubVoter::EDIT'), club) %}
        {{ include('buttons/edit_lg.html.twig', {path: 'club_edit', parameters: {'club_id': club.id}}) }}
    {% endif %}
{% endblock %}
