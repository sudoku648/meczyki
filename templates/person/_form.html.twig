{{ form_start(form) }}
    {{ form_row(form.firstName, {'label': 'Imię'}) }}
    {{ form_row(form.lastName, {'label': 'Nazwisko'}) }}
    {{ form_label(form.mobilePhone, 'Telefon') }}
    <div class="input-group mb-3">
        <span class="input-group-text" id="dialling-country-code">+48</span>
        {{ form_widget(form.mobilePhone, {'attr': {'aria-described-by': 'dialling-country-code'}}) }}
        {{ form_errors(form.mobilePhone) }}
    </div>
    <fieldset class="border p-2 mb-3">
        <legend class="w-auto">Funkcje</legend>
        {{ form_row(form.isReferee, {'label': 'Sędzia'}) }}
        {{ form_row(form.isRefereeObserver, {'label': 'Obserwator'}) }}
        {{ form_row(form.isDelegate, {'label': 'Delegat'}) }}
    </fieldset>
    {{ form_row(form.save, {'label': button_save_label|default('Zapisz'), 'attr': {'class': 'btn-success icon-save loadable-save'}}) }}
    {{ form_row(form.saveAndContinue, {'label': button_save_and_continue_label|default('Zapisz i dodaj nową'), 'attr': {'class': 'btn-success icon-save loadable-save'}}) }}
    {% if is_granted(constant('\\App\\Security\\Voter\\PersonVoter::LIST')) %}
        <a href="{{ path('people_front') }}" class="btn btn-outline-secondary icon-cancel" title="Wróć do listy">Anuluj</a>
    {% endif %}
{{ form_end(form) }}
