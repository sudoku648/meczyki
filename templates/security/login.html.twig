{% extends 'main.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Logowanie do Systemu Meczyki</h3></div>
                                <div class="card-body">
                                    <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                        <div class="form-floating mb-3">
                                            <input type="text" value="{{ lastUsername }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                                            <label for="inputUsername">Nazwa użytkownika</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                            <label for="inputPassword">Hasło</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button class="btn btn-primary" type="submit">Zaloguj</button>
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
{% endblock %}
