<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          vendor/doctrine/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\User" table="`user`" repository-class="App\Repository\DoctrineUserRepository">
        <id name="id" type="guid" column="id" length="36">
            <generator strategy="CUSTOM" />
            <custom-id-generator class="doctrine.uuid_generator" />
        </id>

        <field name="username" column="username" length="180" unique="true" />
        <field name="password" column="password" />
        <field name="roles" type="json" column="roles" />
        <field name="isActive" type="boolean" column="is_active" />

        <field name="createdAt" type="datetimetz_immutable" column="created_at" />
        <field name="updatedAt" type="datetimetz_immutable" column="updated_at" nullable="true" />

        <one-to-one field="person" target-entity="Person">
            <join-column name="person_id" nullable="true" on-delete="SET NULL" />
        </one-to-one>

        <many-to-many field="userRoles" target-entity="UserRole" inversed-by="users">
            <join-table name="user_to_role" />
        </many-to-many>
    </entity>

</doctrine-mapping>
