<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          vendor/doctrine/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Person" table="person" repository-class="App\Repository\DoctrinePersonRepository">
        <id name="id" type="guid" column="id" length="36">
            <generator strategy="CUSTOM" />
            <custom-id-generator class="doctrine.uuid_generator" />
        </id>

        <field name="firstName" column="first_name" length="100" />
        <field name="lastName" column="last_name" length="100" />
        <field name="mobilePhone" column="mobile_phone" length="12" unique="true" nullable="true" />
        <field name="isDelegate" type="boolean" column="is_delegate" />
        <field name="isReferee" type="boolean" column="is_referee" />
        <field name="isRefereeObserver" type="boolean" column="is_referee_observer" />
        <field name="email" column="email" length="150" nullable="true" />
        <field name="dateOfBirth" type="date_immutable" column="date_of_birth" nullable="true" />
        <field name="placeOfBirth" column="place_of_birth" length="100" nullable="true" />
        <field name="addressTown" column="address_town" length="100" nullable="true" />
        <field name="addressStreet" column="address_street" length="100" nullable="true" />
        <field name="addressZipCode" column="address_zip_code" length="6" nullable="true" />
        <field name="addressPostOffice" column="address_post_office" length="100" nullable="true" />
        <field name="addressVoivodeship" type="string" enumType="App\Entity\Enums\VoivodeshipEnum"
            column="address_voivodeship" length="100" nullable="true" />
        <field name="addressPowiat" column="address_powiat" length="100" nullable="true" />
        <field name="addressGmina" column="address_gmina" length="100" nullable="true" />
        <field name="taxOfficeName" column="tax_office_name" length="150" nullable="true" />
        <field name="taxOfficeAddress" column="tax_office_address" length="150" nullable="true" />
        <field name="pesel" column="pesel" length="11" nullable="true" />
        <field name="nip" column="nip" length="10" nullable="true" />
        <field name="iban" column="iban" length="28" nullable="true" />
        <field name="allowsToSendPitByEmail" type="boolean" column="allows_to_send_pit_by_email" />

        <field name="createdAt" type="datetimetz_immutable" column="created_at" />
        <field name="updatedAt" type="datetimetz_immutable" column="updated_at" nullable="true" />

        <one-to-many field="matchGameBills" target-entity="MatchGameBill" mapped-by="person" />
    </entity>

</doctrine-mapping>
